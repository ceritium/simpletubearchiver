<h1> Subscriptions </h1>


<div class="row row-cols-3">
  <% @subscriptions.each do |subscription| %>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= subscription.name %>
          </h5>
          <p class="card-text">
            <%= subscription.description %>
          </p>
          <div class="d-flex justify-content-between align-items-center mt-3">
            <% case subscription.sync_status%>
            <% when "done", "failed" %>
              <%= button_to "sync", sync_subscription_path(subscription), method: :post, class: "btn btn-outline-info" %>
              <% if subscription.failed? %>
                <span class="badge bg-danger"> sync failed </span>
              <% end %>
            <% else  %>
              <span class="badge bg-warning text-dark"><%= subscription.sync_status %></span>
            <% end %>

            <%= button_to subscription_path(subscription),
                method: :delete,
                class: "btn btn-outline-danger btn-sm",
                data: { 
                  confirm: "Are you sure you want to delete '#{subscription.name}'? This action cannot be undone.",
                  disable_with: "Deleting..."
                } do %>
              <i class="bi bi-trash3"></i> Delete
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
